@model Nota2.ModelsView.RelatorioViewModel

@{
    ViewData["Title"] = "Relatório de Votos";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search" asp-action="VotosCampanha">
            <div class="form-row align-items-center">
                <div class="form-group col-md-auto">
                    <label for="minDate">Campanha:</label>
                    <select name="camId" asp-items="@(new SelectList(Model.Campanhas,"CamID","Descricao"))" class="form-control">
                        <option value="-1">TODAS</option>
                    </select>
                </div>
                <div class="form-group col-md-auto">
                    <div class="form-check row">
                        <div class="col">
                            <input class="form-check-input" type="checkbox" value="1" name="autoavaliacao">
                            <label class="form-check-label" for="autoavaliacao">Autoavaliação</label>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-auto">
                    <label for="minDate">Período:</label>
                    <div class="row">
                        <div class="col">
                            <input type="datetime-local" class="form-control" name="minDate" value=@ViewData["minDate"] />
                        </div>
                        <div class="col">
                            <input type="datetime-local" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Filtrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        Campanha
                    </th>
                    <th>
                        Data do Voto
                    </th>
                    <th>
                        Nota
                    </th>
                    <th>
                        Comentário
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Votos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Campanha.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataVoto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comentario)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-heading">
        <h5 class="panel-title">Total de votos = @Model.Votos.Count() Média das notas: @Model.MediaVotos.ToString("N1")</h5>
    </div>
</div>