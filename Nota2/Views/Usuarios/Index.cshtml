@model IEnumerable<Nota2.Models.Usuario>

@{
    ViewData["Title"] = "Usuário";
}

<h1>Usuário</h1>

<p>
    <a asp-action="Create">Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUsuario.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UseID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UseID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.UseID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
